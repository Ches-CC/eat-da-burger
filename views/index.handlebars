
<div class="container bg-light">
    <div class="row mx-auto">
        <div class="col text-center">
            <p><h1>Burgers Burgers Burgers!!!</h1></p>
        </div>
    </div>

    <div class="row mx-auto">
        <div class="col content-center">
            <img src="/assets/img/bobs-burger.png" class="rounded mx-auto d-block" style="height:300px; width:500px;" alt="Burger Photo!">
        </div>
    </div>

    <div class="row mt-1">
        <div class="col">
            <!--Not yet DEVOURED!!-->
            <p><h2>Burgers to be Devoured...</h2></p>
            <ul class="border">
            {{#each burgerList}}
                {{#unless devoured}}
                {{> burgers/burgers-block devoured=false}}
                {{/unless}}
            {{/each}}
            </ul>
        </div> 
        
        <div class="col">
            <!--DEVOURED!!-->
            <p><h2>Mmm, these burgers were delicious!</h2></p>
            <ul class="border">
            {{#each burgerList}}
                {{#if devoured}}
                {{> burgers/burgers-devoured devoured=true}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
    <h2>Add Your Own Burger!</h2>
    <form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Burger</button>
    </form>
</div>